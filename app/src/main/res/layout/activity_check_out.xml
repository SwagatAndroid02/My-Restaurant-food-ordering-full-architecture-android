<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chckout_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="project.android.thincnext.myrestaurent.activities.CheckOutActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/chckout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarTheme.ToolBarStyle">

        <android.support.v7.widget.Toolbar
            android:id="@+id/chckout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Total Price"
                            android:textColor="@color/Black"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text=":"
                            android:textColor="@color/Black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/chckout_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="SGST"
                                android:textColor="@color/Black"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text=" (2.5%)" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text=":"
                            android:textColor="@color/Black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/chckout_sgst_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="CGST"
                                android:textColor="@color/Black"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text=" (2.5%)" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text=":"
                            android:textColor="@color/Black"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/chckout_cgst_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/Black"
                            android:textSize="16sp" />
                    </TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/Black" />

                    <TableRow android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Total"
                            android:textColor="@color/Black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:text=":"
                            android:textColor="@color/Black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/chckout_payable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/Black"
                            android:textSize="20sp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/chckout_txt_pincode_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!-- <EditText
                    android:id="@+id/chckout_et_deliveryadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Delivery Address"
                    android:inputType="textPostalAddress"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColorHint="@color/grey500"
                    android:backgroundTint="@color/Black"
                    android:textCursorDrawable="@drawable/edit_text_cursor"
                    android:fontFamily="sans-serif-condensed"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Delivery address"
                        android:textColor="@color/blue900"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/chckout_btn_add_deliveryadd"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/chckout_txt_deliveryadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="no saved address"
                        android:textColor="@color/Black"
                        android:textSize="17sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Contact person mobile"
                    android:textColor="@color/blue900"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/chckout_et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_edit_text_sharp_corner"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Land mark"
                    android:textColor="@color/blue900"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/chckout_et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_edit_text_sharp_corner"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/chckout_et_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shape_edit_text"
                    android:hint="pin code"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/chckout_pincode_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/pin_codes" />

                    <TextView
                        android:id="@+id/chckout_pincode_spinner_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Select pin code"
                        android:textColor="@color/Black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Select Payment Option"
                    android:textColor="@color/grey800" />

                <RadioGroup
                    android:id="@+id/chckout_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <!-- <RadioButton
                         android:id="@+id/chckout_radio_debitcard"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:buttonTint="@color/colorPrimaryDark"
                         android:text="Debit Card" />

                     <RadioButton
                         android:id="@+id/chckout_radio_creditcard"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:buttonTint="@color/colorPrimaryDark"
                         android:text="Credit Card" />

                     <RadioButton
                         android:id="@+id/chckout_radio_netbanking"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:buttonTint="@color/colorPrimaryDark"
                         android:text="Net Banking" />-->

                    <RadioButton
                        android:id="@+id/chckout_radio_cod"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:checked="true"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Cash on delivery" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/chckout_proceed_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-condensed"
                android:text="proceed checkout"
                android:textColor="@drawable/button_pressed_white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

